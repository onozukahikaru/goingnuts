{
  "type": "custom.overlay",
  "name": "Overlay group",
  "sections": {
    "cart-drawer": {
      "type": "cart-drawer",
      "settings": {
        "show_cart_note": true,
        "show_shipping_text": true,
        "show_view_cart_button": true,
        "show_checkout_button": false,
        "show_price_in_checkout_button": false
      }
    },
    "newsletter-popup": {
      "type": "newsletter-popup",
      "settings": {
        "apparition_delay": 5,
        "show_only_on_index": true,
        "hide_for_account_holders": false,
        "show_only_once": true,
        "title": "メールマガジン送付について",
        "content": "お得なキャンペーンやセール、新商品入荷の際にご案内のメールを送付させていただきます。",
        "button_text": "登録",
        "background": "#3f665c",
        "text_color": "#ffffff",
        "button_background": "#0c3b2c",
        "button_text_color": "#ffffff"
      }
    },
    "privacy-banner": {
      "type": "privacy-banner",
      "settings": {
        "title": "🍪 Cookie policy",
        "content": "<p>We use cookies and similar technologies to provide the best experience on our website. Refer to our Privacy Policy for more information.<\/p>",
        "background": "#3f665c",
        "text_color": "#ffffff"
      }
    }
  },
  "order": [
    "cart-drawer",
    "newsletter-popup",
    "privacy-banner"
  ]
}
